/*
 * style.styl
 */

bodyColor = gray
documentationColor = red
editorColor = orange

body, html
    background bodyColor
    height 100%
    width 100%
    position absolute
    overflow hidden

.documentation
    z-index 1
    background rgb(240, 241, 243)
    height 100%
    width 100%
    position absolute

    section.content
        height: unquote('-webkit-calc(100% - 30px)');
        height: unquote('-moz-calc(100% - 30px)');
        height: unquote('-ms-calc(100% - 30px)');
        height: unquote('calc(100% - 30px)');
        width 100%
        position relative
        div.doc-content
            height: unquote('-webkit-calc(100% - 65px)');
            height: unquote('-moz-calc(100% - 65px)');
            height: unquote('-ms-calc(100% - 65px)');
            height: unquote('calc(100% - 65px)');
            overflow:auto;
            -webkit-overflow-scrolling:touch;
            max-width 1280px
            margin auto
            p
                margin:10px 0
            h3
                color: rgb(53, 71, 87);
                font-weight: bold;
            h2
                color: rgb(94, 128, 158);
                font-weight: bold;
        header
            position absolute
            bottom 0
            width 100%
            height: 65px;
            padding: 15px 0 0 0;
            h1
                margin 0 0 0 10px
                width 100%
                font-size 25px
                font-family: "Molle", cursive;
                font-weight bold
                font-style italic
                display inline
            span
                font-size 15px
                font-family: 'Anaheim', sans-serif;
                font-style initial
                margin: 0 0 0 6px;

    div.active-area
        height 30px;
        width 100%
        text-align center
        position relative
        background: rgb(118, 189, 255);
        border-bottom: 1px solid rgb(117, 172, 223);
        div.chip
            background: rgb(118, 189, 255);
            position: relative;
            width: 100px;
            height: 50px;
            margin: auto;
            top: -20px;
            border-radius: 40px;
            span
                position absolute
                font-size 20px
                font-size: 30px;
                color rgb(240, 241, 243)
                top: -2px;
                left: 38px;
        a.github
            text-decoration none
            position absolute
            top 6px
            right 6px
            color rgb(240, 241, 243)

.editor
    z-index 0
    background rgb(243, 243, 243)
    height 100%
    width 100%
    position absolute
    div.toolbar
        height 50px
        position absolute
        top 30px
        width 100%
        color red
        line-height: 50px;
        padding: 0 0 0 0px;
        .button
            -webkit-appearance: none;
            border: none;
            background: rgb(243, 243, 243);
            //box-shadow: 0px 0px 1px rgb(119, 119, 119);
            height: 26px;
            width: 26px;
            border-radius: 0;
            float left
            font-size 21px;
            margin: 12px 0 0 10px;
            padding 0
            color rgb(118, 189, 255)
        .select
            width 120px
            font-size: 14px;
            padding: 0 0 0 5px;
            color black

    .CodeMirror
        position absolute
        background #fff
        top 80px
        width 100%
        height: unquote('-webkit-calc(100% - 70px)');
        height: unquote('-moz-calc(100% - 70px)');
        height: unquote('-ms-calc(100% - 70px)');
        height: unquote('calc(100% - 70px)');
        border-top: 1px solid rgb(218, 218, 218);
        background:rgb(253, 253, 253);
